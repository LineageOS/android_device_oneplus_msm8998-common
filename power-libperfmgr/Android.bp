cc_library {
    name: "libdisppower-msm8998",
    proprietary: true,
    srcs: ["disp-power/InteractionHandler.cpp"],
    shared_libs: [
        "libbase",
        "libcutils",
        "liblog",
        "libperfmgr",
        "libutils",
    ],
}

cc_binary {
    name: "android.hardware.power@1.3-service.oneplus_msm8998",
    relative_install_path: "hw",
    vintf_fragments: ["hidl/android.hardware.power@1.3-service.oneplus_msm8998.xml"],
    init_rc: ["hidl/android.hardware.power@1.3-service.oneplus_msm8998.rc"],
    srcs: [
        "hidl/service.cpp",
        "hidl/Power.cpp",
        "hidl/power-helper.c",
    ],
    cflags: [
        "-Wall",
        "-Werror",
    ],
    shared_libs: [
        "libbase",
        "libhidlbase",
        "liblog",
        "libutils",
        "libcutils",
        "android.hardware.power@1.0",
        "android.hardware.power@1.1",
        "android.hardware.power@1.2",
        "android.hardware.power@1.3",
        "libdisppower-msm8998",
        "libperfmgr",
    ],
    proprietary: true,
}

cc_binary {
    name: "android.hardware.power-service.oneplus_msm8998-libperfmgr",
    relative_install_path: "hw",
    init_rc: ["aidl/android.hardware.power-service.oneplus_msm8998-libperfmgr.rc"],
    vintf_fragments: ["aidl/android.hardware.power-service.oneplus_msm8998.xml"],
    vendor: true,
    shared_libs: [
        "android.hardware.power-V1-ndk_platform",
        "libbase",
        "libcutils",
        "liblog",
        "libutils",
        "libbinder_ndk",
        "libdisppower-msm8998",
        "libperfmgr",
        "pixel-power-ext-V1-ndk_platform",
    ],
    srcs: [
        "aidl/service.cpp",
        "aidl/Power.cpp",
        "aidl/PowerExt.cpp",
    ],
}
